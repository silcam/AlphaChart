{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "server/dist",
        "baseUrl": ".",
        "typeRoots": ["@types", "node_modules/@types"],
        "strictNullChecks": true,
        "paths": {
            "*": [
                "node_modules/*",
                "server/src/types/*"
            ]
        }
    },
    "include": [
        "server/src/**/*"
    ],
    "exclude": [
        "**/*.test.ts"
    ]
}